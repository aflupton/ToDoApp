<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>To-Do List</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div class="container">
      <h1 class="Display-1"><em>Categories</em></h1>
      <div class="row">
        <div class="col-md-2">
            @if (@Model.Count == 0)
            {
              <h3>No Categories have been added, please add a category.</h3>
            }
            @foreach (var category in Model)
            {
              <h3><a href="/Categories/@category.GetId()">@category.GetName()</a></h3>
            }
        </div>
        <div class="col-md-2">
          <form action="/Categories/AddCategory" method="get">
            <button class="btn btn-info" type="submit" name="button"><em>Add another category</em></button>
          </form>
        </div>
        <div class="col-md-2">
          <form action="/Items/List" method="get">
            <button class="btn btn-info" type="submit" name="button"><em>View list</em></button>
          </form>
        </div>
        <div class="col-md-2">
          <form action="/" method="get">
            <button class="btn btn-info" type="submit" name="button"><em>Home</em></button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
