<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>To-Do List</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div class="container">
      <h1 class="Display-1"><em>Category Details</em></h1>
      <div class="row">
        <div class="col-md-2">
          <h1>List items within this category:</h1>
          <ol>
            @foreach (var item in @Model["items"])
            {
              <li><a href='/Categories/@Model["category"].GetId()/Items/@item.GetId()'>@item.GetDescription()</a></li>
            }
          </ol>
        </div>

        <div class="col-md-2">
          <form action='/Categories/@Model["category"].GetId()/Items/New' method="get">
            <button class="btn btn-info" type="submit" name="button"><em>Add another item</em></button>
          </form>
        </div>

        <div class="col-md-2">
          <form action="/Categories/Index" method="get">
            <button class="btn btn-info" type="submit" name="button"><em>View categories index</em></button>
          </form>
        </div>
        <div class="col-md-2">
          <form action="/Items/List" method="get">
            <button class="btn btn-info" type="submit" name="button"><em>View list</em></button>
          </form>
        </div>

        <div class="col-md-2">
          <form action="/" method="get">
            <button class="btn btn-info" type="submit" name="button"><em>Home</em></button>
          </form>

        </div>
      </div>
    </div>
  </body>
</html>
